{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"],
      "axios": ["./node_modules/axios"],
      "expo-secure-store": ["./node_modules/expo-secure-store"]
    },
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx", "../shared/**/*.ts", "../shared/**/*.tsx"]
}
